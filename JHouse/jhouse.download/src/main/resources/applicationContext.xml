<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd">
           
	<bean id="homesTable" class="org.apache.hadoop.hbase.client.HTable">
		<constructor-arg name="conf" ref="hadoopConfig"/>
		<constructor-arg name="tableName" value="homes"/>
	</bean>
	
	<bean id="addressIndexTable" class="org.apache.hadoop.hbase.client.HTable">
		<constructor-arg name="conf" ref="hadoopConfig"/>
		<constructor-arg name="tableName" value="homes_index_address"/>
	</bean>

	<bean id="hadoopConfig" class="org.apache.hadoop.conf.Configuration" />
	
	<bean id="linkSource" class="jinvestor.jhouse.download.SimpleZillowLinkSource">
		<constructor-arg name="urlTemplate" value="${jinvestor.jhouse.zillow.recentlysold.url}"/>
	</bean>
	
	<bean id="searchProcessor" class="jinvestor.jhouse.download.SearchProcessor">
		<constructor-arg name="dao" ref="dao"/>
	</bean>
	
	<bean id="downloader" class="jinvestor.jhouse.download.ZillowDownloader">
		<constructor-arg name="source" ref="linkSource"/>
		<constructor-arg name="searchProcessor" ref="searchProcessor"/>
	</bean>
	
	<context:property-placeholder location="classpath:zillow.properties"/>
	
    <beans profile="localHBase">
	
	
		<bean id="dao" class="jinvestor.jhouse.download.HBaseHouseDAO">
			<constructor-arg name="homesTable" ref="homesTable" />
			<constructor-arg name="addressIndexTable" ref="addressIndexTable" />
			<!-- collaborators and configuration for this bean go here -->
		</bean>
    
    
    </beans>
    
	<beans profile="aws">
	
		<bean id="dao" class="jinvestor.jhouse.download.HBaseHouseDAO">
			<constructor-arg name="homesTable" ref="homesTable" />
			<constructor-arg name="addressIndexTable" ref="addressIndexTable" />
			<!-- collaborators and configuration for this bean go here -->
		</bean>
	</beans>
</beans>